---
const { name, description, image, alt } = Astro.props;
---

<div class="grid2">
  <div class="text">
    <h2 class="magiven_navn">{name}</h2>
    <p class="magiven_info">{description}</p>
    <img src="./img/star.svg" alt="star" class="star" />
  </div>
  <div class="magiven_container">
    <img src={image} alt={alt} class="magiven_img" />
  </div>
</div>

<style>
  .grid2 {
    display: flex;
    margin-bottom: 20rem;
    justify-content: left;
    padding-left: 5rem;
    padding-right: 5rem;
    gap: 2rem;
  }

  .text {
    max-width: 350px;
  }

  .magiven_navn {
    font-family: raleway_semibold;
    color: #f4ba35;
    font-size: 25px;
    margin-bottom: 2rem;
  }

  .magiven_info {
    font-family: raleway_semibold;
    color: #fffbef;
    font-size: 18px;
  }

  .magiven_container {
    max-width: 350px;
    overflow: hidden;
  }

  .magiven_img {
    border-radius: 30px;
    width: 100%;
    object-fit: cover;
  }

  .star {
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease; /* Smooth transitions */
    width: 45px;
    margin-top: 2rem;
  }

  .star:hover {
    transform: scale(1.2) rotate(15deg); /* Skal√©r og roter */
  }
</style>
